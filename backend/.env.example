# =============================================================================
# AI Grant Crawler - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Run 'npm run verify' to check your configuration
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Supabase Database Configuration
# Get these from: https://supabase.com/dashboard -> Project Settings -> API
# -----------------------------------------------------------------------------
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# -----------------------------------------------------------------------------
# REQUIRED: Google Gemini API Key (FREE)
# Used for Fast Track proposal generation
# Get from: https://makersuite.google.com/app/apikey
# -----------------------------------------------------------------------------
GEMINI_API_KEY="AIza..."

# -----------------------------------------------------------------------------
# OPTIONAL: Premium AI Providers
# OpenRouter gives access to Claude, GPT-5, and other premium models
# Get from: https://openrouter.ai/keys
# -----------------------------------------------------------------------------
OPENROUTER_API_KEY="sk-or-..."

# Alternative direct providers (if not using OpenRouter)
OPENAI_API_KEY="sk-..."
DEEPSEEK_API_KEY="sk-..."

# -----------------------------------------------------------------------------
# OPTIONAL: Grant Discovery / Web Scraping
# Firecrawl is used to scrape grant sources automatically
# Get from: https://firecrawl.dev
# -----------------------------------------------------------------------------
FIRECRAWL_API_KEY="fc-..."

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Server port (default: 3000)
PORT=3000

# Environment mode: development | production
NODE_ENV="development"

# Enable/disable AI-Researcher integration (default: true)
# Set to "false" to disable the Python Agent Laboratory
AI_RESEARCHER_ENABLED="true"

# -----------------------------------------------------------------------------
# Email Notifications (Phase 3)
# Get your API key from: https://resend.com
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_..."
FROM_EMAIL="AI Grant Crawler <notifications@yourdomain.com>"
FRONTEND_URL="http://localhost:5173"

# Internal API Key (for scheduled jobs)
INTERNAL_API_KEY="your-internal-api-key"

# -----------------------------------------------------------------------------
# Cost Control Settings
# -----------------------------------------------------------------------------
# LOW_COST_MODE: Use only free Gemini models for all agents (default: true)
# Set to "false" to use premium models (Claude, GPT-5) which cost $7-15/proposal
LOW_COST_MODE="true"

# -----------------------------------------------------------------------------
# Demo Mode (for testing without real data)
# -----------------------------------------------------------------------------
# IS_DEMO: Enable demo mode with sample data (default: false)
IS_DEMO="false"
